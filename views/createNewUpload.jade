                                +checkboxMixin("business", "Business")
                                +checkboxMixin("academia", "Academia")
                                +checkboxMixin("localGov", "Local Government")
                                +checkBoxWithTextBoxMixin("other", "other", "otherPartiesInvolved")
                div.actions
                    input(type="submit", value="submit")